<Page
    x:Class="SimpleSongsPlayer.Views.MusicListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:SimpleSongsPlayer.ViewModels.StyleSelectors"
    xmlns:temp="using:SimpleSongsPlayer.Views.Templates"
    xmlns:ctor="using:SimpleSongsPlayer.Views.Controllers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource VmLocator}, Path=MusicList}">

    <Page.Resources>
        <CollectionViewSource x:Key="Data_CollectionViewSource" Source="{Binding DataSource}" IsSourceGrouped="True" ItemsPath="Items"/>
        <GroupStyle x:Key="Normal_GroupStyle" HidesIfEmpty="True">
            <GroupStyle.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </GroupStyle.HeaderTemplate>
        </GroupStyle>
        <GroupStyle x:Name="NoName_GroupStyle" HidesIfEmpty="True">
            <GroupStyle.HeaderTemplate>
                <DataTemplate>
                    <TextBlock  x:Uid="/MusicListPage/AllMusic_TextBlock"/>
                </DataTemplate>
            </GroupStyle.HeaderTemplate>
            <GroupStyle.HeaderContainerStyle>
                <Style TargetType="ListViewHeaderItem">
                    <Setter Property="IsEnabled" Value="False"/>
                </Style>
            </GroupStyle.HeaderContainerStyle>
        </GroupStyle>
        <model:MusicGroupDynamicStyleSelector x:Key="MusicGroupDynamicStyleSelector" Normal="{StaticResource Normal_GroupStyle}" NoName="{StaticResource NoName_GroupStyle}"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="ViewOption_StackPanel" Grid.Column="1" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Uid="/MusicListPage/ListSort_TextBlock" VerticalAlignment="Center"/>
                    <ctor:SplitButton x:Name="ListSortSelection_SplitButton" LeftButton_Click="ListSortSelection_SplitButton_OnLeftButton_Click">
                        <ctor:SplitButton.ExtendFlyout>
                            <Flyout Placement="Bottom">
                                <ListBox x:Name="ListSorter_ListBox" ItemsSource="{Binding SorterMembers}" SelectionChanged="ListSorter_ListBox_OnSelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Flyout>
                        </ctor:SplitButton.ExtendFlyout>
                        <ctor:SplitButton.LeftContent>
                            <FontIcon Glyph="&#xE174;"/>
                        </ctor:SplitButton.LeftContent>
                    </ctor:SplitButton>
                </StackPanel>
                <ctor:DropDownButton Content="分组" Margin="8,0" Background="Transparent">
                    <ctor:DropDownButton.Flyout>
                        <Flyout>
                            <ListBox x:Name="Grouper_ListBox" ItemsSource="{Binding GrouperMembers}" SelectionChanged="Grouper_ListBox_OnSelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Flyout>
                    </ctor:DropDownButton.Flyout>
                </ctor:DropDownButton>
            </StackPanel>
        </Grid>

        <SemanticZoom Grid.Row="1">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="Main_ListView" ItemsSource="{Binding Source={StaticResource Data_CollectionViewSource}}" GroupStyleSelector="{StaticResource MusicGroupDynamicStyleSelector}" SelectionChanged="Main_ListView_OnSelectionChanged">
                    <ListView.GroupStyle>
                        <GroupStyle/>
                    </ListView.GroupStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <temp:MusicFileItemTemplate x:Name="MusicFileItemTemplate" Source="{Binding}" MoreMenuItemList="{StaticResource MusicItemMenuList}" PlayRequested="MusicFileItemTemplate_OnPlayRequested"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </SemanticZoom.ZoomedInView>

            <SemanticZoom.ZoomedOutView>
                <GridView ItemsSource="{Binding Source={StaticResource Data_CollectionViewSource}, Path=CollectionGroups}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Group.Name}" FontSize="{ThemeResource TextStyleLargeFontSize}"/>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
    </Grid>
</Page>
