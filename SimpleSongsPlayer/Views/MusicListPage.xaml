<Page
    x:Class="SimpleSongsPlayer.Views.MusicListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:temp="using:SimpleSongsPlayer.Views.Templates"
    xmlns:ctor="using:SimpleSongsPlayer.Views.Controllers"
    xmlns:pctor="using:HappyStudio.UwpToolsLibrary.Control"

    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Interactions="using:Microsoft.Xaml.Interactions.Core"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:selectors="using:SimpleSongsPlayer.ViewModels.Selectors"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource VmLocator}, Path=MusicList}"
    Loaded="MusicListPage_OnLoaded">

    <Page.Resources>
        <CollectionViewSource x:Key="Data_CollectionViewSource" Source="{Binding DataSource}" IsSourceGrouped="True" ItemsPath="Items"/>

        <GroupStyle x:Key="Normal_GroupStyle" HidesIfEmpty="True">
            <GroupStyle.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Padding" Value="8"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </StackPanel.Resources>

                            <Button x:Name="PlayGroup_Button" x:Uid="/MusicListPage/PlayGroup_Button" Tapped="PlayGroup_Button_OnTapped">
                                <FontIcon Glyph="&#xE102;"/>
                            </Button>
                            <Button x:Name="GroupOption_Add_Button" x:Uid="/MusicListPage/GroupOption_Add_Button" Tapped="GroupOption_Add_Button_OnTapped">
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem x:Uid="/MusicListPage/AddToNowPlaying_MenuFlyoutItem" Click="AddToNowPlaying_MenuFlyoutItem_OnClick"/>
                                        <MenuFlyoutItem x:Uid="/MusicListPage/AddToFavorites_MenuFlyoutItem" Click="AddToFavorites_MenuFlyoutItem_OnClick"/>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <FontIcon Glyph="&#xE109;"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GroupStyle.HeaderTemplate>
            <GroupStyle.HeaderContainerStyle>
                <Style TargetType="ListViewHeaderItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </GroupStyle.HeaderContainerStyle>
        </GroupStyle>
        <GroupStyle x:Name="NoName_GroupStyle" HidesIfEmpty="True">
            <GroupStyle.HeaderTemplate>
                <DataTemplate>
                    <TextBlock  x:Uid="/MusicListPage/AllMusic_TextBlock"/>
                </DataTemplate>
            </GroupStyle.HeaderTemplate>
            <GroupStyle.HeaderContainerStyle>
                <Style TargetType="ListViewHeaderItem">
                    <Setter Property="IsEnabled" Value="False"/>
                </Style>
            </GroupStyle.HeaderContainerStyle>
        </GroupStyle>
        <selectors:MusicGroupDynamicStyleSelector x:Key="MusicGroupDynamicStyleSelector" Normal="{StaticResource Normal_GroupStyle}" NoName="{StaticResource NoName_GroupStyle}"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="PlayAll_Button" x:Uid="/MusicListPage/PlayAll_Button" Background="Transparent" Click="PlayAll_Button_OnClick">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <FontIcon Glyph="&#xE149;"/>
                    <TextBlock x:Uid="/MusicListPage/PlayAll_TextBlock" Grid.Column="1" Margin="8,0,0,0"/>
                </Grid>
            </Button>
            <StackPanel x:Name="ViewOption_StackPanel" Grid.Column="1" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Uid="/SorterMembers/ListSort_TextBlock" VerticalAlignment="Center"/>
                    <ctor:SplitButton x:Name="ListSortSelection_SplitButton" LeftButton_Click="ListSortSelection_SplitButton_OnLeftButton_Click">
                        <ctor:SplitButton.ExtendFlyout>
                            <Flyout Placement="Bottom">
                                <ListBox x:Name="ListSorter_ListBox" ItemsSource="{x:Bind vm.SorterMembers, Mode=OneWay}" SelectionChanged="ListSorter_ListBox_OnSelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Flyout>
                        </ctor:SplitButton.ExtendFlyout>
                        <ctor:SplitButton.LeftContent>
                            <FontIcon Glyph="&#xE174;"/>
                        </ctor:SplitButton.LeftContent>
                    </ctor:SplitButton>
                </StackPanel>
                <ctor:DropDownButton x:Uid="/MusicListPage/Grouper_DropDownButton" Margin="8,0" Background="Transparent">
                    <ctor:DropDownButton.Flyout>
                        <Flyout>
                            <ListBox x:Name="Grouper_ListBox" ItemsSource="{x:Bind vm.GrouperMembers, Mode=OneWay}" SelectionChanged="Grouper_ListBox_OnSelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Flyout>
                    </ctor:DropDownButton.Flyout>
                </ctor:DropDownButton>
            </StackPanel>
        </Grid>

        <SemanticZoom Grid.Row="1">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="Main_ListView" ItemsSource="{Binding Source={StaticResource Data_CollectionViewSource}}" GroupStyleSelector="{StaticResource MusicGroupDynamicStyleSelector}" SelectionChanged="Main_ListView_OnSelectionChanged">
                    <ListView.GroupStyle>
                        <GroupStyle/>
                    </ListView.GroupStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <temp:MusicFileItemTemplate x:Name="MusicFileItemTemplate" Source="{Binding}" MoreMenuItemList="{StaticResource MusicItemMenuList}" PlayRequested="MusicFileItemTemplate_OnPlayRequested"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </SemanticZoom.ZoomedInView>

            <SemanticZoom.ZoomedOutView>
                <GridView ItemsSource="{Binding Source={StaticResource Data_CollectionViewSource}, Path=CollectionGroups}">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ctor:WarpPanel/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="Main_TextBlock" Text="{Binding Group.Name}" TextTrimming="CharacterEllipsis" Opacity="0.4" FontSize="{ThemeResource TextStyleLargeFontSize}">
                                <Interactivity:Interaction.Behaviors>
                                    <Interactivity:BehaviorCollection>
                                        <Interactions:DataTriggerBehavior Binding="{Binding Group.Items.Count}" ComparisonCondition="GreaterThan" Value="0">
                                            <Interactions:ChangePropertyAction TargetObject="{Binding ElementName=Main_TextBlock}" PropertyName="Opacity" Value="1"/>
                                        </Interactions:DataTriggerBehavior>
                                    </Interactivity:BehaviorCollection>
                                </Interactivity:Interaction.Behaviors>
                            </TextBlock>
                        </DataTemplate>
                    </GridView.ItemTemplate>

                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="MinHeight" Value="0"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>

        <Grid Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="50">
            <Grid.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition/>
                </TransitionCollection>
            </Grid.Transitions>

            <pctor:FloatingActionButton x:Name="SwitchMultipleSelection_FloatingActionButton" x:Uid="/MusicListPage/SwitchMultipleSelection_FloatingActionButton" Glyph="&#xE133;" Click="SwitchMultipleSelection_FloatingActionButton_OnClick"/>
            <pctor:FloatingActionButton x:Name="SwitchSingleSelection_FloatingActionButton" x:Uid="/MusicListPage/SwitchSingleSelection_FloatingActionButton" Glyph="&#xE10B;" Visibility="Collapsed" Click="SwitchSingleSelection_FloatingActionButton_OnClick"/>
        </Grid>

        <CommandBar x:Name="ListOption_CommandBar" Grid.Row="2" Visibility="Collapsed">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="PlaySelectedItems_AppBarButton" x:Uid="/MusicListPage/PlaySelectedItems_AppBarButton" Click="PlaySelectedItems_AppBarButton_OnClick">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE102;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="AddSelectedItems_AppBarButton" x:Uid="/MusicListPage/AddSelectedItems_AppBarButton">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE109;"/>
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="AddSelectedItemsToNowPlaying_MenuFlyoutItem" x:Uid="/MusicListPage/AddToNowPlaying_MenuFlyoutItem" Click="AddSelectedItemsToNowPlaying_MenuFlyoutItem_OnClick"/>
                            <MenuFlyoutItem x:Name="AddSelectedItemsToFavorites_MenuFlyoutItem" x:Uid="/MusicListPage/AddToFavorites_MenuFlyoutItem" Click="AddSelectedItemsToFavorites_MenuFlyoutItem_OnClick"/>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Grid>
</Page>
