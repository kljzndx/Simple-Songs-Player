<Page
    x:Class="SimpleSongsPlayer.Views.MusicInformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pctrl="using:HappyStudio.UwpToolsLibrary.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="MusicInformationPage_OnSizeChanged">

    <Grid>
        <Frame x:Name="Main_Frame"/>

        <StackPanel x:Name="PinOption_StackPanel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,56,36">
            <pctrl:FloatingActionButton x:Name="Pin_FloatingActionButton" x:Uid="/MusicInfoPage/Pin_FloatingActionButton" Content="&#xE141;" Tapped="Pin_FloatingActionButton_OnClick"/>
            <pctrl:FloatingActionButton x:Name="UnPin_FloatingActionButton" x:Uid="/MusicInfoPage/UnPin_FloatingActionButton" Content="&#xE196;" Visibility="Collapsed" Tapped="UnPin_FloatingActionButton_OnClick"/>
        </StackPanel>
    </Grid>
</Page>
