            </AppBarButton>
            <AppBarButton x:Name="OpenLogsFolder_AppBarButton" x:Uid="/AboutPage/OpenLogsFolder_AppBarButton" Click="OpenLogsFolder_AppBarButton_Click">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE2AC;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="Review_AppBarButton" x:Uid="/AboutPage/Review_AppBarButton" Click="Review_AppBarButton_Click">
