<Page
    x:Class="SimpleSongsPlayer.Views.FrameworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctol="using:SimpleSongsPlayer.Views.Controllers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=Framework}">

    <Grid x:Name="Root_Grid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Frame x:Name="Main_Frame" Navigated="Main_Frame_Navigated"/>
        <Button x:Name="Close_Button" Content="&#xE10A;" Padding="8" Margin="10" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Close_Button_Click"/>
        <ctol:PlayerController x:Name="PlayerController" Grid.Row="1" CoverClick="PlayerController_CoverClick"/>

        <ContentDialog x:Name="PlayingListAddition_ContentDialog" x:Uid="/PlayingListOperation/PlayingListAddition_ContentDialog" IsPrimaryButtonEnabled="False">
            <TextBox x:Name="PlayingListName_TextBox" x:Uid="/PlayingListOperation/PlayingListName_TextBox" VerticalAlignment="Center" TextChanged="PlayingListName_TextBox_TextChanged"/>
        </ContentDialog>
    </Grid>
</Page>
